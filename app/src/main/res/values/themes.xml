<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FurnitureShoppingAndroidApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@null</item>
        <item name="iconGravity">top</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="ImageViewRounded50">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="ImageViewRounded10">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="ImageViewRoundedBottomLeft">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">15%</item>
    </style>

    <style name="ButtonIconOnly">
        <item name="android:elevation">10dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="ProfileCard">
        <item name="cardElevation">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingStart">20dp</item>
    </style>
    <style name="ProfileCardLayout">
        <item name="android:paddingStart">10dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="AppBarFurniture" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/font_black</item>
    </style>
</resources>